<?xml version="1.0" encoding="utf-8"?>
<com.jty.ui.intercept.RelativeLayoutEx xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content_panel"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:baselineAligned="false" >

    <RelativeLayout
        android:id="@+id/detail_panel"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true" >

        <com.pplt.ui.TabChange
            android:id="@+id/tabDetail"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_alignParentBottom="true"
            app:borderWidth="1dp"
            app:checkedTextColor="?attr/common_title_text_color_light"
            app:textColor="?attr/common_text_color_dark" />

        <RelativeLayout
            android:id="@+id/detailContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/tabDetail"
            android:orientation="vertical"
            android:layout_marginBottom="5dp" >

            <com.jty.stock.market.view.FiveRangeView
                android:id="@+id/fiveRangeView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:priceColor="?attr/common_text_color" />

            <com.jty.stock.market.view.DivideTimeView
                android:id="@+id/divideTimeView"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <com.jty.stock.market.view.DividePriceView
                android:id="@+id/dividePriceView"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </RelativeLayout>
    </RelativeLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_toLeftOf="@+id/detail_panel"
        android:layout_alignTop="@+id/detail_panel"
        android:layout_marginRight="10dp" >

        <cn.limc.androidcharts.view.MinKLineChart
            android:id="@+id/MinKLine"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3" />

        <cn.limc.androidcharts.view.VolumeChart
            android:id="@+id/VolumeChart"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />
    </LinearLayout>

</com.jty.ui.intercept.RelativeLayoutEx>