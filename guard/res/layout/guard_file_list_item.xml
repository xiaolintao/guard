<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:padding="@dimen/edge_margin"
    android:background="?attr/common_btn_pressed_mark" >

    <TextView
        android:id="@+id/tv_filename"
        style="@style/style_text_large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    
    <TextView
        android:id="@+id/tv_summary"
        style="@style/style_label_medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_filename"
        android:layout_alignLeft="@+id/tv_filename"
        android:layout_marginTop="@dimen/common_line_spacing"/>

</RelativeLayout>