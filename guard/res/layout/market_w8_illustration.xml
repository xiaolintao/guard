<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/iv_up"
        android:layout_width="11dp"
        android:layout_height="11dp"
        android:layout_centerVertical="true"
        android:background="@drawable/w8_up" />

    <TextView
        android:id="@+id/tv_up"
        style="@style/style_label_small"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginLeft="3dp"
        android:layout_toRightOf="@+id/iv_up"
        android:gravity="center_vertical"
        android:text="@string/w8_up" />

    <ImageView
        android:id="@+id/iv_down"
        android:layout_width="11dp"
        android:layout_height="11dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="3dp"
        android:layout_toRightOf="@+id/tv_up"
        android:background="@drawable/w8_down" />

    <TextView
        android:id="@+id/tv_down"
        style="@style/style_label_small"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginLeft="3dp"
        android:layout_toRightOf="@+id/iv_down"
        android:gravity="center_vertical"
        android:text="@string/w8_down" />

    <ImageView
        android:id="@+id/iv_no_change"
        android:layout_width="11dp"
        android:layout_height="11dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="3dp"
        android:layout_toRightOf="@+id/tv_down"
        android:background="@drawable/w8_no_change" />

    <TextView
        android:id="@+id/tv_no_change"
        style="@style/style_label_small"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginLeft="3dp"
        android:layout_toRightOf="@+id/iv_no_change"
        android:gravity="center_vertical"
        android:text="@string/w8_no_change" />

    <ImageView
        android:id="@+id/iv_no_trade"
        android:layout_width="11dp"
        android:layout_height="11dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="3dp"
        android:layout_toRightOf="@+id/tv_no_change"
        android:background="#39414d" />

    <TextView
        android:id="@+id/tv_no_trade"
        style="@style/style_label_small"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginLeft="3dp"
        android:layout_toRightOf="@+id/iv_no_trade"
        android:gravity="center_vertical"
        android:text="@string/w8_no_trade" />

</RelativeLayout>