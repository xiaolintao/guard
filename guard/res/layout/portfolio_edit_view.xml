<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:dslv="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/common_content_bg" >

    <com.pplt.ui.TitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:leftText="@string/finish"
        app:rightText="@string/default_sort"
        app:titleText="@string/portfolio_edit_title" />

    <include
        android:id="@+id/list_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_header_height"
        android:layout_below="@+id/title_bar"
        layout="@layout/portfolio_edit_head" />

    <com.mobeta.android.dslv.DragSortListView
        android:id="@+id/list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/list_header"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        android:listSelector="?attr/common_btn_pressed_mark"
        dslv:collapsed_height="1dp"
        dslv:drag_enabled="true"
        dslv:drag_handle_id="@id/drag_panel"
        dslv:drag_scroll_start="0.33"
        dslv:drag_start_mode="onDown"
        dslv:float_alpha="1"
        dslv:float_background_color="?attr/common_content_bg"
        dslv:max_drag_scroll_speed="0.5"
        dslv:remove_enabled="false"
        dslv:remove_mode="flingRemove"
        dslv:slide_shuffle_speed="0.3"
        dslv:sort_enabled="true"
        dslv:track_drag_sort="false"
        dslv:use_default_controller="true" />

</RelativeLayout>