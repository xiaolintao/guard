<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_content_bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="20dp" >

        <TextView
            style="@style/style_label_large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/login_lable_pplt"
            android:textColor="@color/color_blue" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/edge_margin"
        android:paddingRight="@dimen/edge_margin" >

        <EditText
            android:id="@+id/et_account"
            style="@style/style_input"
            android:layout_marginTop="@dimen/line_margin"
            android:hint="@string/personal_login_hint_account" >
        </EditText>

        <EditText
            android:id="@+id/et_pwd"
            style="@style/style_input"
            android:layout_marginTop="@dimen/line_margin"
            android:hint="@string/personal_login_hint_input_pwd"
            android:inputType="textPassword" >
        </EditText>

        <TextView
            android:id="@+id/tv_login"
            style="@style/style_text_medium"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:layout_marginTop="15dp"
            android:background="@drawable/btn_blue"
            android:gravity="center"
            android:text="@string/personal_login" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/tv_register"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/input_line_height"
                android:gravity="center_vertical"
                android:text="@string/personal_to_register"
                android:textColor="@color/common_title_text_color_highlight"
                android:textSize="@dimen/text_size_medium" />

            <TextView
                android:id="@+id/tv_forget_pwd"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/input_line_height"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:text="@string/personal_forget_pwd"
                android:textColor="@color/common_title_text_color_highlight"
                android:textSize="@dimen/text_size_medium" />
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp" >

        <TextView
            style="@style/style_label_large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/login_other_account"
            android:textColor="@color/color_blue" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@android:color/transparent"
            android:orientation="horizontal" >
            
            <ImageView
                android:id="@+id/iv_weixin"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:contentDescription="@string/personal_hint_weixin"
                android:scaleType="fitCenter"
                android:src="@drawable/weixin_icon"
                android:layout_marginLeft="20dp" />
            
            <ImageView
                android:id="@+id/iv_sina"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:contentDescription="@string/personal_hint_sina"
                android:scaleType="fitCenter"
                android:src="@drawable/sina_icon"
                android:layout_marginLeft="20dp" />

            <ImageView
                android:id="@+id/iv_qq"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:contentDescription="@string/personal_hint_qq"
                android:scaleType="fitCenter"
                android:src="@drawable/qq_icon"
                android:layout_marginLeft="20dp" />

            
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>