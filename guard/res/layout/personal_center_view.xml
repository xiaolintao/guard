<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/common_content_bg"
        android:scrollbars="none" >
        
		<LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="vertical">
		  
		    
		    <!-- 系统设置 -->
		    <com.pplt.ui.PreferenceItem
		        android:id="@+id/item_system_setting"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="@dimen/preference_margin"
		        app:piStyle="top" 
		        app:piIcon="@drawable/ic_system_setting"
		        app:piTitle="@string/personal_item_system_setting"/>
		
		    <!-- 微信 -->
		    <com.pplt.ui.PreferenceItem
		        android:id="@+id/item_weixin"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginBottom="@dimen/preference_margin"
		        app:piStyle="bottom" 
		        app:piIcon="@drawable/ic_weixin"
		        app:piTitle="@string/personal_item_weixin"/>
		
		</LinearLayout>
</ScrollView>