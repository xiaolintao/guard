<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/preference_item_bg"
    android:descendantFocusability="blocksDescendants"
    android:padding="@dimen/edge_margin" >

    <RelativeLayout
        android:id="@+id/top_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/tv_name"
            style="@style/style_text_large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/tv_delete"
            style="@style/style_label_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_grey"
            android:paddingBottom="2dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="2dp"
            android:text="@string/delete"
            android:visibility="gone" />
        
        <ToggleButton
            android:id="@+id/cb_select"
            android:layout_width="@dimen/icon_width"
            android:layout_height="@dimen/icon_height"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/btn_bg_checkbox"
            android:textOff=""
            android:textOn="" 
            android:clickable="false"
            android:focusable="false"
            android:enabled="false"
            android:visibility="gone"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_summary"
        style="@style/style_label_medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/top_panel"
        android:layout_below="@+id/top_panel"
        android:layout_marginTop="@dimen/common_line_spacing" />

</RelativeLayout>