<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/list_item_height" >

    <LinearLayout
        android:id="@+id/profit_panel"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/list_item_height"
        android:layout_alignParentRight="true"
        android:background="?attr/common_btn_pressed_mark"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_today_profit"
            style="@style/style_label_medium"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:gravity="center"/>

        <TextView
            android:id="@+id/tv_total_profit"
            style="@style/style_label_medium"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:gravity="center"/>

        <TextView
            android:id="@+id/tv_amount"
            style="@style/style_label_medium"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:gravity="center" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/stock_info_panel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_item_height"
        android:layout_toLeftOf="@+id/profit_panel"
        android:background="?attr/common_btn_pressed_mark" >

        <include
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            layout="@layout/mystocks_stock" />
    </RelativeLayout>

</RelativeLayout>