<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/step2_panel"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:visibility="gone" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp" >

        <ImageView
            android:id="@+id/iv_hint"
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/success" />

        <TextView
            style="@style/style_text_medium"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/input_line_height"
            android:layout_below="@+id/iv_hint"
            android:layout_centerHorizontal="true"
            android:gravity="center_vertical"
            android:text="@string/personal_retrieve_pwd_verified" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="vertical"
        android:paddingLeft="@dimen/edge_margin"
        android:paddingRight="@dimen/edge_margin" >

        <EditText
            android:id="@+id/et_pwd"
            style="@style/style_input"
            android:hint="@string/personal_login_hint_input_new_pwd"
            android:inputType="textPassword" >
        </EditText>

        <TextView
            android:id="@+id/tv_reset_password"
            style="@style/style_text_medium"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:layout_marginTop="15dp"
            android:background="@drawable/btn_blue"
            android:gravity="center"
            android:text="@string/confirm_change" />
    </LinearLayout>

</LinearLayout>