<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/common_btn_pressed_mark" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@android:color/transparent" >

        <ToggleButton
            android:id="@+id/tb_item"
            style="@style/style_label_medium"
            android:layout_width="@dimen/icon_width"
            android:layout_height="@dimen/icon_height"
            android:layout_centerHorizontal="true"
            android:clickable="false"/>
        
        <TextView
            android:id="@+id/tv_item"
            style="@style/style_text_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tb_item"
            android:layout_centerHorizontal="true"/>
        
        <TextView
            android:id="@+id/tv_focus"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="@drawable/shape_oval_red"
            android:layout_alignRight="@+id/tb_item"
            android:layout_alignTop="@+id/tb_item"
            android:visibility="gone"/>
    </RelativeLayout>

</RelativeLayout>