<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="popup_menu_item_basic">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:shadowColor">#000</item>
        <item name="android:textColor">#000</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="popup_menu_item_button" parent="@style/popup_menu_item_basic">
        <item name="android:background">@drawable/btn_popup</item>
    </style>

    <style name="popup_menu_item_cancel" parent="@style/popup_menu_item_basic">
        <item name="android:background">@drawable/btn_popup_cancel</item>
        <item name="android:text">@string/cancel</item>
    </style>
    
     <style name="PopupAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/popup_enter</item>
        <item name="android:windowExitAnimation">@anim/popup_exit</item>
    </style>

</resources>